<div id="<%= dom_id post %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Body:</strong>
    <%= post.body %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Slug:</strong>
    <%= post.slug %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= post.status %>
  </div>
  <div>
    <strong class="block font-medium mb-1">User:</strong>
    <%= post.user_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Published at:</strong>
    <%= post.published_at %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Reading time:</strong>
    <%= post.reading_time %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Summary:</strong>
    <%= post.summary %>
  </div>
</div>
